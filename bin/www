#!/usr/bin/env node

require('dotenv').config();
const { environment, port: PORT } = require('../src/config/');
const app = require('../src/app.js');
const db = require('../src/models');

db.sequelize
    .authenticate()
    .then(() => {
        console.log('Db connected...');
        app.listen(PORT, () => console.log(`App running in ${environment} on port ${PORT}....`));
    }).catch(err => {
        console.log('Db connection FAILED...');
        console.log(err);
    })
