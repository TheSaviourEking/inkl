doctype html 
html 
    head 
        title New
        link(rel="stylesheet" type="text/css" href="/css/style.css")
    body 
        .container 
            h1 Log in
            form(action="/api/session" method="post")
                section 
                    label(for="username") Username 
                    input#username(name="username" type="text" autocomplete="username" required autofocus)
                section 
                    label(for="current-password") Password 
                    input#current-password(name="password" type="password" autocomplete="current-password" required)
                //- input(type="hidden" name="_csrf" id="_csrf" value= cs)
                input(type="hidden" name="_csrf" id="_csrf")
                button(type="submit") Login 
            h2 Other Sign in Options
            div#options
                //- a#google(class="button google") Google
                a#google(class="button google" href= googleAuth) Google
                //- a(class="button google" href="/login/google") Google
                a(class="button github" href="/login/github") Github
                a(class="button facebook" href="/login/facebook") Facebook
    // js file here
    script(src="/js/csrf.js")
    script(src="/js/login.js")
    script(src="/js/script.js")
